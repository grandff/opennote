{
  "manifest_version": 3,
  "name": "Audio Record & Transcription",
  "version": "1.0.0",
  "description": "브라우저 오디오를 녹음하고 텍스트로 변환 및 요약하는 크롬 익스텐션",
  "permissions": [
    "tabCapture",
    "storage",
    "activeTab",
    "tabs",
    "offscreen",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Audio Record & Transcription"
  },
  "side_panel": {
    "default_path": "src/popup/index.html"
  },
  "options_page": "src/options/index.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}


